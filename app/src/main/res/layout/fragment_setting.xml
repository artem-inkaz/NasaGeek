<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".settings.SettingFragment">

    <TextView
        android:id="@+id/titleTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/themeSelect"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/darkTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightTheme"
        app:srcCompat="@drawable/ic_dark_luna" />

    <TextView
        android:id="@+id/darkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:text="@string/darkTheme"
        app:layout_constraintStart_toEndOf="@+id/darkTheme"
        app:layout_constraintTop_toTopOf="@+id/darkTheme" />

    <ImageView
        android:id="@+id/lightTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTheme"
        app:srcCompat="@drawable/ic_dark_sun" />

    <TextView
        android:id="@+id/lightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="@string/lightTheme"
        app:layout_constraintEnd_toStartOf="@+id/marsTheme"
        app:layout_constraintTop_toTopOf="@+id/marsTheme" />

    <ImageView
        android:id="@+id/moonTheme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/darkTheme"
        app:layout_constraintEnd_toEndOf="@+id/marsTheme"
        app:layout_constraintStart_toStartOf="@+id/marsTheme"
        app:layout_constraintTop_toTopOf="@+id/darkTheme"
        app:srcCompat="@mipmap/ic_moon_logo_foreground" />

    <TextView
        android:id="@+id/moonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:text="@string/moonTheme"
        app:layout_constraintStart_toEndOf="@+id/moonTheme"
        app:layout_constraintTop_toTopOf="@+id/moonTheme" />

    <ImageView
        android:id="@+id/marsTheme"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/moonTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTheme"
        app:srcCompat="@mipmap/ic_mars_logo_foreground" />

    <TextView
        android:id="@+id/marsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/marsTheme"
        app:layout_constraintStart_toEndOf="@+id/marsTheme"
        app:layout_constraintTop_toTopOf="@+id/marsTheme" />

    <ImageView
        android:id="@+id/kosmosTheme"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/moonTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTheme"
        app:srcCompat="@mipmap/ic_kosmos_logo_foreground" />

    <TextView
        android:id="@+id/kosmosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/kosmosTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kosmosTheme" />


</androidx.constraintlayout.widget.ConstraintLayout>