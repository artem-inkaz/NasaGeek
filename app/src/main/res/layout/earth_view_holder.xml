<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    app:cardBackgroundColor="?attr/colorBackground"
    android:layout_marginStart="@dimen/view_big_gap"
    android:layout_marginEnd="@dimen/view_big_gap"
    android:layout_marginBottom="@dimen/view_big_gap"
    android:padding="@dimen/view_medium_gap"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="?attr/colorBackground"
    app:strokeWidth="1dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemEarthLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/earthImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_earth" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/earthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identifier"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/earthImageView"
            app:layout_constraintStart_toEndOf="@+id/earthImageView"
            app:layout_constraintTop_toTopOf="@+id/earthImageView"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moveItemUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:tint="@color/design_default_color_error"
            app:layout_constraintBottom_toBottomOf="@+id/earthTextView"
            app:layout_constraintEnd_toStartOf="@+id/addItemImageView"
            app:layout_constraintStart_toEndOf="@+id/earthTextView"
            app:layout_constraintTop_toTopOf="@+id/earthTextView"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moveItemDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:tint="@color/design_default_color_error"
            app:layout_constraintBottom_toBottomOf="@+id/earthTextView"
            app:layout_constraintEnd_toStartOf="@+id/addItemImageView"
            app:layout_constraintStart_toEndOf="@+id/moveItemUp"
            app:layout_constraintTop_toTopOf="@+id/earthTextView"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/addItemImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dragHandleImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_plus_fab" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/removeItemImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toStartOf="@+id/dragHandleImageView"
            app:layout_constraintTop_toBottomOf="@id/addItemImageView"
            app:srcCompat="@drawable/ic_archive" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dragHandleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:tint="@color/cardview_shadow_start_color"
            app:layout_constraintBottom_toBottomOf="@+id/earthTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/earthTextView"
            app:srcCompat="@drawable/ic_hamburger_menu_bottom_bar" />

        <ui.smartpro.nasageek.utils.EquilateralImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:contentDescription="@string/photo_of_the_day_stub"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/earthImageView"
            app:srcCompat="@drawable/ic_no_photo_vector" />

        <TextView
            android:id="@+id/date_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descriptionNasa"
            android:textSize="@dimen/textSizeDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            tools:text="Дата фото Земли" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupEarth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="image_view,date_photo" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>