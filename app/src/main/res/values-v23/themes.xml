<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NasaGeek" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_mars_secondary</item>
        <item name="colorSecondaryVariant">@color/color_moon_secondary</item>
        <item name="colorOnSecondary">@color/color_kosmos_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="colorText">@color/black</item>
        <item name="colorBackground">#FFFFFF</item>
        <item name="colorTextResult">@color/black</item>
        <item name="colorBackgroundEditText">#5570B6</item>
        <item name="colorTextButton">#FF1FCDBD</item>
        <item name="colorIconTintDark">#FFFFFF</item>
        <item name="colorIconTintLight">#F9DA22</item>
        <item name="tabTextColor">#FF1B1A17</item>
        <item name="android:hyphenationFrequency">normal</item>
    </style>

